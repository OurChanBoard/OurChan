unless minimal
	nav.navbar
		a.nav-item(href='/index.html') #{__('Home')}
		a(href='/boards.html' class=`nav-item ${enableWebring ? 'short-nav' : ''}`)
			| #{__('Boards')} 
			if enableWebring
				.rainbow +Webring
		a.nav-item#overboardlink(href='/overboard.html') #{__('Overboard')}
		a.nav-item(href='/account.html') #{__('Account')}
		if !modview && board
			a.nav-item(href=`/${board._id}/manage/${managePage || 'index.html'}`) #{__('Manage')}
		//- The settings button for JS users - will be hidden with CSS in NOJS mode
		a.nav-item.right#settings(href="#theme-settings" data-label=(__('Settings')))
		
		//- No JS settings button - This is now only a visual element, the actual functionality
		//- is handled by the #settings button with the href="#theme-settings" which works in both modes
		noscript
			style.
				#settings { display: none !important; }
				#nojs-settings-button { display: inline-block !important; }
			a.nav-item.right#nojs-settings-button(href="#theme-settings") #{__('Settings')}
