unless minimal
	nav.navbar
		a.nav-item(href='/index.html') #{__('Home')}
		a(href='/boards.html' class=`nav-item ${enableWebring ? 'short-nav' : ''}`)
			| #{__('Boards')} 
			if enableWebring
				.rainbow +Webring
		a.nav-item#overboardlink(href='/overboard.html') #{__('Overboard')}
		a.nav-item(href='/account.html') #{__('Account')}
		if !modview && board
			a.nav-item(href=`/${board._id}/manage/${managePage || 'index.html'}`) #{__('Manage')}
		//- The settings button works with both JS enabled and disabled:
		//- JS disabled: href="#theme-settings" opens the target via CSS :target selector
		//- JS enabled: the click is intercepted by settings.js to show the modal
		a.nav-item.right#settings(href="#theme-settings" data-label=(__('Settings')))
		
		//- No JS settings button that only appears when JavaScript is disabled
		noscript
			label.nav-item.right#nojs-settings-button(for="nojs-settings-toggle") #{__('Settings')}
