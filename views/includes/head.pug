//- very basic styles to hide some elements and improve experience for users with noscript
noscript
	style.
		.jsonly { display: none!important; }
		.user-id { cursor: auto!important; }
		
		/* Hide the JS version of settings button in no-JS mode */
		#settings {
			display: none !important;
		}
		
		/* Style for the no-JS settings button */
		#nojs-settings-button {
			display: inline-block !important;
			line-height: 3em;
			text-decoration: none;
			float: right;
			padding-left: 10px;
			padding-right: 10px;
			text-align: center;
			cursor: pointer;
		}
		
		/* Modal background */
		.modal-bg-nojs {
			position: fixed;
			top: 0;
			bottom: 0;
			right: 0;
			left: 0;
			background-color: rgba(0, 0, 0, 0.7);
			z-index: 4;
			display: none;
		}
		
		/* The settings modal */
		.modal-nojs {
			display: none;
			flex-direction: column;
			max-width: calc(100% - 10px);
			max-height: calc(100% - 50px);
			position: fixed;
			top: 3em;
			left: 50%;
			transform: translateX(-50%);
			background-color: var(--post-color);
			z-index: 5;
			box-sizing: border-box;
			border: 5px solid var(--post-color);
			align-self: center;
			overflow: auto;
			padding: 10px;
		}
		
		/* Close button styling */
		.modal-nojs .close {
			cursor: pointer;
			font-size: 20px;
			font-weight: bold;
			padding: 0 5px;
		}
		
		/* Note for JS-only features */
		.nojs-note {
			background-color: var(--highlighted-post-color);
			border: 1px solid var(--highlighted-post-outline-color);
			padding: 10px;
			margin-top: 10px;
			border-radius: 3px;
			width: 100%;
		}
		
		/* Show settings modal when checkbox is checked */
		#nojs-settings-toggle:checked ~ .modal-nojs {
			display: flex !important;
		}
		
		#nojs-settings-toggle:checked ~ .modal-bg-nojs {
			display: block !important;
		}
		
		/* Hide the checkbox */
		#nojs-settings-toggle {
			display: none;
		}
		
		/* Styling for disabled options */
		.js-required {
			opacity: 0.5;
			cursor: not-available;
			pointer-events: none;
		}
		
		.js-required-label {
			font-style: italic;
			color: var(--text-color);
			opacity: 0.7;
		}
		
		/* Mobile styles */
		@media only screen and (max-width: 600px) {
			.modal-nojs {
				top: 3em;
				left: 0 !important;
				transform: none !important;
				width: 100%;
				max-width: none;
				margin: 0;
			}
		}

