//- very basic styles to hide some elements and improve experience for users with noscript
noscript
	style.
		.jsonly { display: none!important; }
		.user-id { cursor: auto!important; }
		
		/* Settings modal styling for no-JS version - defined here to ensure it works properly */
		#nojs-settings-modal-bg {
			position: fixed;
			top: 0;
			bottom: 0;
			right: 0;
			left: 0;
			background-color: rgba(0, 0, 0, 0.7);
			z-index: 4;
			display: none;
		}
		
		#nojs-settings-modal {
			display: none;
			flex-direction: column;
			max-width: calc(100% - 10px);
			max-height: calc(100% - 50px);
			position: fixed;
			top: 3em;
			left: 50%;
			transform: translateX(-50%);
			background-color: var(--post-color);
			z-index: 5;
			box-sizing: border-box;
			border: 5px solid var(--post-color);
			align-self: center;
			overflow: auto;
		}
		
		/* Using the :target selector to show/hide the modal */
		#nojs-settings:target ~ #nojs-settings-modal {
			display: flex !important;
		}
		
		#nojs-settings:target ~ #nojs-settings-modal-bg {
			display: block !important;
		}
		
		/* Hide the standard JS settings button in no-JS mode */
		#settings {
			display: none;
		}
		
		/* Style for the no-JS settings button */
		#nojs-settings-button {
			display: inline-block;
			line-height: 3em;
			text-decoration: none;
			float: right;
			padding-left: 10px;
			padding-right: 10px;
			text-align: center;
			cursor: pointer;
		}
		
		/* Note for JS-only features */
		.nojs-note {
			background-color: var(--highlighted-post-color);
			border: 1px solid var(--highlighted-post-outline-color);
			padding: 10px;
			margin-top: 10px;
			border-radius: 3px;
			width: 100%;
		}
		
		/* Mobile styles */
		@media only screen and (max-width: 600px) {
			#nojs-settings-modal {
				top: 3em;
				left: 0 !important;
				transform: none !important;
				width: 100%;
				max-width: none;
				margin: 0;
			}
		}

